{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",               // ✅ Fix JSX.Element error
    "noUnusedLocals": false,          // ✅ Avoid unused variable errors
    "noUnusedParameters": false       // ✅ Avoid unused parameter errors
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
